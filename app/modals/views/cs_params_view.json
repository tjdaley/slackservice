                "emoji": true
            },
            "element": {
                "type": "plain_text_input",
                "action_id": "income_amount",
                "placeholder": {
                    "type": "plain_text",
                    "text": "$10,000"
                }
            }
        },
        {
            "type": "input",
            "label": {
                "type": "plain_text",
