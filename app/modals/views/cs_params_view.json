{
    "type": "modal",
    "title": {
        "type": "plain_text",
        "text": "Calculate Child Support",
        "emoji": true
    },
    "submit": {
        "type": "plain_text",
        "text": "Calculate",
        "emoji": true
    },
    "close": {
        "type": "plain_text",
        "text": "Cancel",
        "emoji": true
    },
